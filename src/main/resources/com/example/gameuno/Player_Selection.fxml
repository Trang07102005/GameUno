            <Button fx:id="fourPlayersButton" mnemonicParsing="false" onAction="#selectFourPlayers" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to right, #fc466b, #3f5efb); -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 30; -fx-border-width: 2; -fx-cursor: hand;" text="👨‍👩‍👧‍👦 4 NGƯỜI CHƠI">
               <font>
                  <Font size="20.0" />
               </font>
               <effect>
                  <DropShadow offsetY="3.0">
                     <color>
                        <Color blue="0.20000000298023224" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackToMenu" style="-fx-background-color: linear-gradient(to right, #747d8c, #57606f); -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.4); -fx-border-width: 1; -fx-cursor: hand; -fx-border-radius: 20;" text="🔙 Quay lại">
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <DropShadow offsetY="3.0">
                     <color>
                        <Color blue="0.20000000298023224" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
         </children>
         <effect>
            <DropShadow offsetY="10.0" />
         </effect>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
